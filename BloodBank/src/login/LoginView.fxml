<AnchorPane minHeight="300.0" minWidth="500.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="login.LoginViewController">
   <children>
      <Accordion />
      <Label alignment="CENTER" layoutY="-1.0" prefHeight="54.0" prefWidth="500.0" style="-fx-background-color: black;" text="Operator Login" textFill="WHITE">
         <font>
            <Font name="Sitka Small" size="25.0" />
         </font>
      </Label>
      <ImageView fitHeight="124.0" fitWidth="135.0" layoutX="46.0" layoutY="88.0">
         <image>
            <Image url="@../../pics/programmer.png" />
         </image>
      </ImageView>
      <TextField fx:id="txtuser" layoutX="250.0" layoutY="124.0">
         <font>
            <Font name="Serif Regular" size="16.0" />
         </font>
      </TextField>
      <Label layoutX="250.0" layoutY="98.0" prefHeight="18.0" prefWidth="96.0" text="User Id">
         <font>
            <Font name="Sitka Small" size="18.0" />
         </font>
      </Label>
      <Label layoutX="250.0" layoutY="161.0" prefHeight="18.0" prefWidth="96.0" text="Password">
         <font>
            <Font name="Sitka Small" size="18.0" />
         </font>
      </Label>
      <Button alignment="CENTER" layoutX="288.0" layoutY="234.0" mnemonicParsing="false" onAction="#dologin" prefHeight="30.0" prefWidth="116.0" style="-fx-background-color: black;" text="Login" textFill="WHITE">
         <font>
            <Font name="Serif Regular" size="16.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <effect>
            <Lighting>
               <bumpInput>
                  <Shadow />
               </bumpInput>
               <light>
                  <Light.Distant />
               </light>
            </Lighting>
         </effect>
      </Button>
      <PasswordField fx:id="txtpwd" layoutX="250.0" layoutY="186.0">
         <font>
            <Font name="Serif Regular" size="16.0" />
         </font>
      </PasswordField>
   </children>
</AnchorPane>
